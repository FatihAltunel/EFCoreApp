@using EFCoreApp.Data
@model CourseRegister
@{
    ViewData["Title"] = "Edit Course Register";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["Message"]
    </div>
}
<h2>Edit Course Register</h2>
<hr>
<form asp-controller="CourseRegister" asp-action="Edit" method="post">
    <input type="hidden" asp-for="CourseRegisterId">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="StudentId" class="form-label">Select Student</label>
        <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-select">
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="CourseId" class="form-label">Select Course</label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-select">
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="RegsiterDate" class="form-label">Select Register Date</label>
        <input asp-for="RegsiterDate" class="form-select">
    </div>
    <button type="submit" class="btn btn-secondary">Submit</button>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</form>