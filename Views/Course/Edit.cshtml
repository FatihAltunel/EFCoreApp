@using EFCoreApp.Data
@model Course
@{
    ViewData["Title"] = "Edit Course";
}
<div class="row">
    <div class="col-8">
        <h2>Edit Course</h2>
        <hr>
        <form asp-controller="Course" asp-action="Edit" method="post">
            <input type="hidden" asp-for="CourseId">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="CourseName" class="form-label">Course Name:</label>
                <input type="text" asp-for="CourseName" class="form-control">
            </div>
            <button type="submit" class="btn btn-secondary">Submit</button>
        </form></div>
    <div class="col-4">
        <h3>Students</h3>
        <hr>
        <ul>
            @foreach(var item in @Model.CourseRegisters){
                <li>@item.student.StudentName</li>
            }
        </ul>
    </div>
</div>