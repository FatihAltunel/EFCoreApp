@using EFCoreApp.Data
@model Course
@{
    ViewData["Title"] = "Edit Course";
}
<div class="row">
    <div class="col-8">
        <h2>Edit Course</h2>
        <hr>
        <form asp-controller="Course" asp-action="Edit" method="post">
            <input type="hidden" asp-for="CourseId">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="CourseName" class="form-label">Course Name:</label>
                <input type="text" asp-for="CourseName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="LecturerId" class="form-label">Course Lecturer</label>
                <select asp-for="LecturerId" asp-items="ViewBag.Lecturers" class="form-select">
                    <option selected>Select a Lecturer</option>
                </select>
            </div>
            <button type="submit" class="btn btn-secondary">Submit</button>
        </form>
    </div>
    <div class="col-4">
        <div class="col" style="padding:15px;">
            <div class="row">
                <h3>Students</h3>
                <hr>
                <ul class="list-group">
                    @foreach(var item in @Model.CourseRegisters){
                        <li class="list-group-item">@item.student.StudentName</li>
                    }
                </ul>
            </div>
            <div class="row" style="margin-top:30px;">
                <h3>Lecturer</h3>
                <hr>
                <ul class="list-group">
                    @{ 
                        if(@Model.lecturer!=null){
                            <li class="list-group-item">@Model.lecturer.LecturerName</li>
                        }
                        else{   
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>